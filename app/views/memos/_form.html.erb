<%= form_with url: "/museums/#{params[:museum_id]}/memos", method: :post, local: true do |f| %>
  <div class="memo_field">
    <%= f.label :memo, "memo" %><br />
    <%= f.text_area :memo, size: "100x20", placeholder: "作品の感想を思いのままに書いてみよう" %>
  </div>
  <div class="actions">
    <%= f.submit "SEND", class: :form__btn %>
  </div>
<% end %> 