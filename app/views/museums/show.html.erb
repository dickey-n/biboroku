<main class="main">
  <div class="inner">
    <div class="museum__wrapper">
      <p class="museum__hedding">
        <%= @museum.title%>
      </p>

      <% if user_signed_in? && current_user.id == @museum.user_id %>
        <div class="museum__manage">
          <%= link_to "編集する", edit_museum_path, class: :museum__btn %>
          <%= link_to "削除する", museum_path(@museum.id), method: :delete, class: :museum__btn %>
        </div>
      <% end %>

      <div class="museum__image">
        <%= image_tag @museum.image %>
      </div>

      <div class="museum__body">
        <div class="museum__detail">
          <p class="detail__title">会場</p>
          <p class="detail__message">
            <%= @museum.place %>
          </p>
        </div>
        <div class="museum__detail">
          <p class="detail__title">都道府県</p>
          <p class="detail__message">
            <%= @museum.prefecture.name %>
          </p>
        </div>
        <div class="museum__detail">
          <p class="detail__title">ジャンル</p>
          <p class="detail__message">
            <%= @museum.genre.name %>
          </p>
        </div>
        <div class="museum__detail">
          <p class="detail__title">アーティスト</p>
          <p class="detail__message">
            <%= @museum.artist %>
          </p>
        </div>
      </div>

      <div class="museum__text">
        <p class="detail__title">説明</p>
        <p class="detail__message">
          <%= @museum.text %>
        </p>
      </div>

      <div class="museum__comments">
        <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>
          <%# <%= form_with local: true do |f|%>
            <div class="field">
              <%# <%= f.label :hoge, "コメント" %><br />
              <%# <%= f.text_field :hoge %>
            </div>
            <div class="actions">
              <%# <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <%# <% end %> 
        <%# // ログインしているユーザーには上記を表示する %>
        <ul class="comments_lists">
          <%# 投稿に紐づくコメントを一覧する処理を記述する %>
            <li class="comments_list">
              <%# <%= " コメントのテキスト "%>
              <%# <%= link_to "（ ユーザー名 ）", root_path, class: :comment_user %>
            </li>
          <%# // 投稿に紐づくコメントを一覧する処理を記述する %>
        </ul>
      </div>
    </div>
  </div>
</main>
